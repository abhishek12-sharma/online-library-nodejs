<main class="page">

  <header class="page-header">
    <div>
      <h2>üìò Issue a Book</h2>
      <p>Select a user, choose a book, and set the dates to issue.</p>
    </div>
  </header>

  <form action="/issues" method="POST" class="styled-form">

    <div class="form-group">
      <label>Select User</label>
      <select name="user_id" required>
        <option value="">-- choose user --</option>
        <% users.forEach(u => { %>
          <option value="<%= u.id %>"><%= u.name %> (<%= u.email %>)</option>
        <% }) %>
      </select>
    </div>

    <div class="form-group">
      <label>Select Book</label>
      <select name="book_id" required>
        <option value="">-- choose book --</option>
        <% books.forEach(b => { %>
          <option value="<%= b.id %>">
            <%= b.title %> (Available: <%= b.available_copies %>)
          </option>
        <% }) %>
      </select>
    </div>

    <div class="form-group">
      <label>Issue Date</label>
      <input type="date" name="issue_date" required>
    </div>

    <div class="form-group">
      <label>Due Date (Optional)</label>
      <input type="date" name="due_date">
    </div>

    <button type="submit" class="btn-primary form-submit-btn">
      Issue Book
    </button>

    <div class="form-footer">
      <a href="/issues" class="link-muted">‚Üê Back to Issued Books</a>
    </div>

  </form>
</main>
